style
  .chart rect { fill: steelblue; stroke: white; }

h2 Device Control Panel

div#device(data-id= device_id)

  .row

    table.span6.table.table-striped.table-bordered#device-attributes
      tr
        th Device ID
        td= device_id
      tr
        th Current City
        td
          span#city_name
      tr
        th Current Country
        td
          span#country_name
      tr
        th Current Location
        td
          span#location
      tr
        th Current Temp
        td
          span#temp
          &deg;C
      tr
        th Battery Level
        td#battery_level
          span#battery_readings.pull-left
          .progress
            .bar
      tr
        th Status
        td#status

      tr
        th#control_header Control
        td
          form#send_to_device.form-inline
            input.input-small(type='text', name='key', placeholder="Key")
            input.input-small(type='text', name='value', placeholder="Value")
            button(type='button').btn.btn-primary Send

    #graphs.span6

      h3 Temperature
      div#tempchart

.well#control_messages
  h3 Control Messages
  div#alerts

script(type='text/javascript', src='/javascripts/device.js')
script(type='text/javascript', src='/javascripts/highcharts.js')
